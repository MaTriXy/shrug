<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Action keys. -->
    <item android:state_active="true">
        <ripple android:color="#7fffffff">
            <item android:drawable="@drawable/btn_keyboard_key_active_lxx_light"/>
        </ripple>
    </item>

    <!-- Empty background keys. -->
    <item android:state_empty="true"
        android:drawable="@color/key_background_lxx_light" />

    <!-- Normal keys. -->
    <item>
        <ripple android:color="#55000000">
            <item android:drawable="@color/key_background_lxx_light" />
        </ripple>
    </item>
</selector>
